#version 330 core

in vec2 UV;
out vec4 color;

uniform sampler2D myTextureSampler;
uniform vec3 barColor;
uniform int useTexture; 

void main() {
    if (useTexture == 1) {
        color = texture(myTextureSampler, UV);
        if(color.a < 0.2) discard; 
    } else {
        
        color = vec4(barColor, 1.0);
    }
}